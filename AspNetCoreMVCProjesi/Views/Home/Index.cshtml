@model HomePageViewModel

@{
    ViewData["Title"] = "Anasayfa";
}

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (Slider slider in Model.Sliders)
        {
            <div class="carousel-item @(slider == Model.Sliders.FirstOrDefault() ? "active" : "")">
                <img src="/Img/@slider.Image" class="d-block w-100" height="444" alt="@slider.Image">
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<h1 class="text-center mt-3">
    <a href="/Products" class="link-secondary">Ürünlerimiz</a>
</h1>

<div class="row text-center">

    @foreach (var product in Model.Products)
    {
        @await Html.PartialAsync("_ProductView", product)
    }
</div>