@{
    ViewData["Title"] = "Giriş";
}
<style>
    #main { display: flex; align-items: center; padding-top: 40px; padding-bottom: 40px; }

    .form-signin { width: 100%; max-width: 330px; padding: 15px; margin: auto; background-color: #f5f5f5; }

    .form-signin .checkbox { font-weight: 400; }

    .form-signin .form-floating:focus-within { z-index: 2; }

    .form-signin input[type="email"] { margin-bottom: -1px; border-bottom-right-radius: 0; border-bottom-left-radius: 0; }

    .form-signin input[type="password"] { margin-bottom: 10px; border-top-left-radius: 0; border-top-right-radius: 0; }
</style>

<div id="main">
    <div class="form-signin text-center">
        <form asp-action="Index" autocomplete="off">
            <input autocomplete="false" name="hidden" type="text" style="display:none;">
            <img class="mb-4" src="/Img/lock-300x300.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 fw-normal">Giriş</h1>
            <div class="alert">
                @TempData["Mesaj"]
            </div>
            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" name="email" required placeholder="name@example.com" autocomplete="new-email" autofocus="true">
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-floating">
                <input type="text" class="form-control" id="floatingPassword" name="password" placeholder="Password" autocomplete="new-password" required>
                <label for="floatingPassword">Şifre</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Beni Hatırla
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş</button>
            <p class="mt-5 mb-3 text-muted">© 2017–2022</p>
        </form>
    </div>
    
</div>