@{
    ViewData["Title"] = "Anasayfa";
}

<div class="text-center">
    <h1 class="display-4">Web API Kullanımı</h1>
    <p>
        Asp.Net MVC ile web api projesinin kullanım örnekleri.
    </p>
    <div id="products" class="row row-cols-3">
    </div>
</div>

@section Scripts {
    <script>
        fetch('https://dummyjson.com/products')
            .then(response => response.json()) // JSON olarak dönüştür
            .then(data => {
                console.log(data.products)
                // Ekrandaki div elementini seç
                let div = document.getElementById('products');
                // Ürünleri div içine yazdır
                data.products.forEach(product => {
                    div.innerHTML += `<div><a href="/Home/Detail/${product.id}"><img src="${product.thumbnail}" alt="" class="img-fluid" /></a><h5>${product.title} - ${product.price} ₺</h5></div>`;
                });
            })
            .catch(error => {
                // Hata olursa konsola yazdır
                console.error(error);
            });
    </script>
}