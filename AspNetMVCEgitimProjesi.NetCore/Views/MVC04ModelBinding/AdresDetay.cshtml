@model Adres
@{
    ViewData["Title"] = "Adres Bilgileri";
}

<h1>Adres Bilgileri</h1>

@{
    if (Model is not null) // Model null-boş değilse ekrana aşağıdaki verileri yazdır
    {
        <table class="table table-striped table-hover">
            <tr>
                <td>Şehir</td>
                <td>@Model.Sehir</td>
            </tr>
            <tr>
                <td>İlçe</td>
                <td>@Model.Ilce</td>
            </tr>
            <tr>
                <td>Açık Adres</td>
                <td>@Model.AcikAdres</td>
            </tr>
        </table>
    }
}

<h3>Adres Düzenle (Klasik)</h3>

<hr />

@using (Html.BeginForm())
{
    <table class="table table-striped table-hover">
        <tr>
            <td>Şehir</td>
            <td>@Html.EditorFor(model => model.Sehir)</td>
        </tr>
        <tr>
            <td>İlçe</td>
            <td>@Html.EditorFor(model => model.Ilce)</td>
        </tr>
        <tr>
            <td>Açık Adres</td>
            <td>@Html.EditorFor(model => model.AcikAdres)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Kaydet" />
            </td>
        </tr>
    </table>
}

<h3>Adres Düzenle (Yeni)</h3>

<hr />

<form asp-action="AdresDetay">
    <table class="table table-striped table-hover">
        <tr>
            <td>Şehir</td>
            <td><input asp-for="Sehir" /></td>
        </tr>
        <tr>
            <td>İlçe</td>
            <td><input asp-for="Ilce" /></td>
        </tr>
        <tr>
            <td>Açık Adres</td>
            <td><input asp-for="AcikAdres" /></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Kaydet" />
            </td>
        </tr>
    </table>
</form>