<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetMVCEgitimProjesi.NetCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspNetMVCEgitimProjesi.NetCore.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("OzelCss", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AspNetMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MVC01RazorSyntax" asp-action="Index">Razor Syntax</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC02HtmlAndTagHelpers" asp-action="Index">HtmlAndTag Helpers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC03DataTransfer" asp-action="Index">Data Transfer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/MVC04ModelBinding">Model Binding</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/MVC05ModelValidation">Model Validation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/MVC06Section">Section</a>
                        </li>
                        <partial name="_PartialMenu" />
                        @*<partial name="_PartialTest" />
                        <partial name="/Views/MVC07Partial/_PartialTest.cshtml" />
                        @await Html.PartialAsync("/Views/MVC07Partial/_PartialTest.cshtml")*@
                        @{
                            //await Html.RenderPartialAsync("/Views/MVC07Partial/_PartialTest.cshtml");
                            // PartialAsync geriye IHtmlContent ile partial içindeki veriyi işleyerek döndürür
                            // RenderPartialAsync geriye direk partial içindeki veriyi döndürür, içeriği işlemez bu yüzden daha iyi bir performans sergileyeblir
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("OzelIcerik", required: false)

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AspNetMVCEgitimProjesi.NetCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
