@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<address>
    One Microsoft Way<br />
    Redmond, WA 98052-6399<br />
    <abbr title="Phone">P:</abbr>
    425.555.0100
</address>

<address>
    <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
    <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
</address>


<hr />

<h2>İletişim Formu</h2>

@using (Html.BeginForm())
{
    <div class="container" id="iletisimFormu">
        <div class="row mb-3">
            <div class="col">
                Adınız
            </div>
            <div class="col">
                @Html.TextBox("txtAd", null, null, new { @class = "form-control" })
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                Soyadınız
            </div>
            <div class="col">
                @Html.TextBox("txtSoyad", "Soyadı", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                Telefon Numaranız
            </div>
            <div class="col">
                @Html.TextBox("txtTelefon", null, null, new { @class = "form-control" })
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                Mesajınız
            </div>
            <div class="col">
                @Html.TextArea("txtMesaj", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <input type="submit" value="Gönder" class="btn btn-primary" />
            </div>
        </div>
    </div>
}