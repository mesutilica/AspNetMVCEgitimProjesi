@{
    ViewBag.Title = "MVC Razor Syntax";

    string adi = "Ali";
    string[] isimler = { "Muhammed", "Ali", "Cem", "Kürşat", "Alparslan" };
    var tarih = @DateTime.Now; // yorum satırı
}

<h2>MVC Razor Syntax</h2>
<h6>Title : @ViewBag.Title</h6>
<p>
    C# kodu ile html kodlarını karışık yazabiliyoruz. Ekrandaki metnin c# kodu olduğunu başına eklenen at ifadesinden anlıyor sistem. Bu yazım şekline de razor syntax ı deniliyor
</p>
<h3>İsim :  @adi</h3>

<h4>
    Tarih :  @tarih
</h4>

@if (tarih.Hour > 18)
{
    <h6>İyi Akşamlar</h6>
}
else if (tarih.Hour > 12 && tarih.Hour < 18)
{
    <h6>İyi Günler</h6>
}
else
{
    <h6>İyi Sabahlar</h6>
}

<h2>Dizideki İsimler</h2>

@foreach (var isim in isimler)
{
    if (isim == isimler[0])
    {
        <div class="active">İlk İsim : @isim</div>
    }
    @isim
    <hr />
}

<hr />
Listedeki 2. isim : @isimler[1]
<hr />

@foreach (var isim in isimler)
{
    <h6>@isim</h6>
}

<hr />

@foreach (var isim in isimler)
{
    @(isim + " ")// isimleri aralarına boşluk bırakarak yazdırır
    @:İsim :  @isim -
}

<h3>For Örneği</h3>

@for (var i = 0; i < isimler.Length; i++)
{
    <text>İsim : @isimler[i]
    <hr />
    </text>
}

<h3>For Örneği 2</h3>

@for (var i = 0; i < isimler.Length; i++)
{
    @:İsim : @isimler[i]
    <hr />
}

