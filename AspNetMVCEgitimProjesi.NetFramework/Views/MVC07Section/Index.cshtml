
@{
    ViewBag.Title = "Mvc Section Kullanımı";
}

<h2>Mvc Section Kullanımı</h2>

<section>
    Sayfa içerisinde html section elemeti ile bir bölüm. <br />
    MVC Section alt sayfalardan layout içerisine html, css, javascript kodları göndermemizi sağlar.
</section>

@section Scripts{
    @*<script>alert("Scripts isimli section çalıştı!")</script>*@
    <script>console.log("Bu yazı section ile gönderildi!")</script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
}

@section OzelIcerik{
    <section class="alert alert-success">
        Sayfa içerisinde bir bölüm
    </section>
}

@section OzelCss{
    <style>
        body { background-color: red; color: white; }
    </style>
}