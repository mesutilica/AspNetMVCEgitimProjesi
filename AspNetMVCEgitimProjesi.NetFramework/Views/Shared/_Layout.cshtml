<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("OzelCss", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark navbar-fixed-top">
        <div class="container-fluid">
            @Html.ActionLink("MVC Eğitim", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Anasayfa", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Hakkımızda", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Razor Syntax", "Index", "MVC01RazorSyntax", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Helpers", "Index", "MVC02HtmlHelpers", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("DataTransfer", "Index", "MVC03DataTransfer", new { area = "" }, new { @class = "nav-link" + ViewBag.ActiveClass })</li>
                    <li>@Html.ActionLink("ModelBinding", "Index", "MVC04ModelBinding", new { area = "" }, new { @class = "nav-link" + ViewBag.ActiveClass })</li>
                    <li>@Html.ActionLink("ModelValidation", "Index", "MVC05ModelValidation", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("CRUD", "Index", "MVC06CRUD", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Section", "Index", "MVC07Section", new { area = "" }, new { @class = "nav-link" })</li>
                    @Html.Partial("_PartialMenu")
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        @RenderSection("OzelIcerik", required: false)
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
    document.querySelectorAll('a').forEach(function (element) {
        console.log(element);
        if (element.href.includes('@ViewContext.RouteData.Values["controller"]')) {
            element.classList.remove('nav-link');
            element.classList.add('btn', 'btn-secondary', 'active');
        }
    });
    </script>
</body>
</html>
